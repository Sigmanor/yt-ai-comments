{
  "manifest_version": 2,
  "name": "YouTube AI Comments Generator",
  "version": "1.0.0",
  "description": "Generates comments to support YouTube creators",
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-ai-comments@example.com"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://*.youtube.com/*",
    "https://api.github.com/repos/Sigmanor/yt-ai-comments/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "about.html"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
